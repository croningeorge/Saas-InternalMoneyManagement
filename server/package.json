{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "production": "pm2 start bin/www -i max",
    "precommit-auto": "lint-staged",
    "precommit": "pretty-quick --staged",
    "prettier-watch": "onchange '**/*.js' -- prettier --write {{changed}}",
    "dev-watch":
      "nodemon ./bin/www & onchange '**/*.js' -- prettier --write {{changed}}"
  },
  "dependencies": {
    "axios": "0.17.1",
    "bcrypt": "1.0.3",
    "body-parser": "~1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "debug": "~2.6.9",
    "express": "~4.17.3",
    "express-fileupload": "0.4.0",
    "express-validation": "1.0.2",
    "helmet": "3.10.0",
    "joi": "13.1.1",
    "jsonwebtoken": "^8.1.0",
    "moment": "2.20.1",
    "moment-timezone": "0.5.14",
    "morgan": "~1.9.0",
    "nodemailer": "4.4.2",
    "pg-promise": "7.4.1",
    "safe-regex": "^1.1.0",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "6.1.0",
    "nodemon": "^1.14.11",
    "onchange": "^3.3.0",
    "prettier": "1.10.2",
    "pretty-quick": "1.2.3"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  }
}
